# Copy this file to platform.env and fill values for your cluster.
#
# Load before run:
#   set -a; source scripts/platform/platform.env; set +a

# --- Non-interactive basics ---
PIP_NO_INPUT=1
PYTHONUNBUFFERED=1
TOKENIZERS_PARALLELISM=false

# --- Model hub/caches ---
USE_HF=1
HF_HOME=/path/to/cache/hf
HUGGINGFACE_HUB_CACHE=/path/to/cache/hf/hub
HF_DATASETS_CACHE=/path/to/cache/hf/datasets
MODELSCOPE_CACHE=/path/to/cache/modelscope

# --- W&B ---
# If you do not want online logging, keep WANDB_MODE=offline.
WANDB_MODE=offline
# WANDB_API_KEY=your_key
# WANDB_PROJECT=prl
# WANDB_ENTITY=your_team

# --- PRL runtime variables used by custom code ---
ADVERSARIAL=0
REASONING=True

# Dataset-specific defaults (launcher will auto-fill if empty):
# NUMBER_OF_SAMPLES=
# NUMBER_OF_PROMPTS=
